<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mecol.flower_shop.dao.OrderDao">
    <resultMap id="BaseResultMap" type="com.mecol.flower_shop.entity.Order" >
        <id column="oid" property="oid" jdbcType="INTEGER" />
        <result column="total" property="total" jdbcType="DOUBLE" />
        <result column="ordertime" property="ordertime" jdbcType="TIMESTAMP" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="addr" property="addr" jdbcType="VARCHAR" />
        <result column="uid" property="uid" jdbcType="INTEGER" />
    </resultMap>


    <resultMap type="com.mecol.flower_shop.entity.Order" id="OrderItemsMap" extends="BaseResultMap">

        <!--订单项集合  -->
        <collection property="orderItems" ofType="com.mecol.flower_shop.entity.OrderItem">
            <id column="itemid" property="itemid" jdbcType="INTEGER" />
            <result column="count" property="count" jdbcType="INTEGER" />
            <result column="subtotal" property="subtotal" jdbcType="DOUBLE" />
            <result column="pid" property="pid" jdbcType="INTEGER" />
            <result column="oid" property="oid" jdbcType="INTEGER" />
            <!-- 商品集合 -->
            <collection property="product"  ofType="com.mecol.flower_shop.entity.Flower">
                <id column="pid" property="pid"/>
                <result column="pname" property="pname"/>
                <result column="market_price" property="marketPrice"/>
                <result column="shop_price" property="shopPrice"/>
                <result column="image" property="image"/>
                <result column="pdesc" property="pdesc"/>
                <result column="is_hot" property="isHot"/>
                <result column="pdate" property="pdate"/>
                <result column="csid" property="csid"/>
            </collection>

        </collection>
    </resultMap>

    <resultMap id="OrderSetMapper" type="com.mecol.flower_shop.entity.OrderSet" >
        <id column="oid" property="oid" jdbcType="INTEGER" />
        <result column="total" property="total" jdbcType="DOUBLE" />
        <result column="ordertime" property="ordertime" jdbcType="TIMESTAMP" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="addr" property="addr" jdbcType="VARCHAR" />
        <result column="uid" property="uid" jdbcType="INTEGER" />

        <result column="pname" property="pname" jdbcType="VARCHAR" />
        <result column="shop_price" property="shopPrice" jdbcType="DOUBLE" />
        <result column="image" property="image" jdbcType="VARCHAR" />
        <result column="count" property="count" jdbcType="INTEGER" />
        <result column="subtotal" property="subtotal" jdbcType="DOUBLE" />
    </resultMap>

    <sql id="Base_Column_List" >
        oid, total, ordertime, state, name, phone, addr, uid
    </sql>


    <!--查询所有属于某个用户的订单数量  -->
    <select id="findCount" parameterType="int" resultType ="int">
        select count(*) from orders where uid = #{uid}
    </select>

    <!--查询所有订单数量  -->
    <select id="findCountAll" parameterType="int" resultType ="int">
        select count(*) from orders
    </select>

    <!-- 根据用户id查找对应的订单 -->
    <select id="findOrderPage" parameterType="java.util.Map" resultMap="OrderItemsMap">

        select * from orders

        LIMIT #{begin,jdbcType=INTEGER}, #{limit,jdbcType=INTEGER}
    </select>




    <!--查询所有订单数量  -->
    <select id="findCount1" parameterType="int" resultType ="int">
        select count(*) from orders,orderitem where uid = #{uid} and  orders.oid=orderitem.oid
    </select>

    <!-- 根据用户id查找对应的订单 -->
    <select id="findByUid" parameterType="java.util.Map" resultMap="OrderItemsMap">
        select orders.*,flower.*,orderitem.* from orders,orderitem,flower
        where orders.oid =orderitem.oid AND
              orderitem.pid = flower.pid AND
              orders.uid = #{uid,jdbcType=INTEGER}
        LIMIT #{begin,jdbcType=INTEGER}, #{limit,jdbcType=INTEGER}
    </select>

    <insert id="insert" parameterType="com.mecol.flower_shop.entity.Order" >
        insert into orders ( oid, total, ordertime,
                             state, name, phone,
                             addr, uid)
        values (#{oid,jdbcType=INTEGER}, #{total,jdbcType=DOUBLE}, #{ordertime,jdbcType=TIMESTAMP},
                #{state,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{phone,jdbcType=VARCHAR},
                #{addr,jdbcType=VARCHAR}, #{uid,jdbcType=INTEGER})
    </insert>


    <select id="findByOid" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="Base_Column_List" />
        from orders
        where oid = #{oid,jdbcType=INTEGER}
    </select>



    <!-- 根据订单id查找对应的订单 -->
    <select id="findOneByOid" parameterType="java.lang.Integer" resultMap="OrderItemsMap">
        select orders.*,flower.*,orderitem.* from orders,orderitem,flower
        where orders.oid =orderitem.oid AND
              orderitem.pid = flower.pid AND
              orders.oid = #{oid,jdbcType=INTEGER}
    </select>


    <update id="updateByPrimaryKeySelective" parameterType="com.mecol.flower_shop.entity.Order" >
        update orders
        <set >
            <if test="total != null" >
                total = #{total,jdbcType=DOUBLE},
            </if>
            <if test="ordertime != null" >
                ordertime = #{ordertime,jdbcType=TIMESTAMP},
            </if>
            <if test="state != null" >
                state = #{state,jdbcType=INTEGER},
            </if>
            <if test="name != null" >
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="phone != null" >
                phone = #{phone,jdbcType=VARCHAR},
            </if>
            <if test="addr != null" >
                addr = #{addr,jdbcType=VARCHAR},
            </if>
            <if test="uid != null" >
                uid = #{uid,jdbcType=INTEGER},
            </if>
        </set>
        where oid = #{oid,jdbcType=INTEGER}
    </update>

</mapper>